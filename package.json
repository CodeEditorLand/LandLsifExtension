{
	"name": "lsif-browser",
	"version": "0.0.1",
	"private": false,
	"description": "Extension to browse LSIF databases",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./client/out/extension",
	"scripts": {
		"clean": "tsc -b --clean",
		"compile": "tsc -b",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"vscode:prepublish": "npm run compile",
		"watch": "tsc -b -w"
	},
	"contributes": {
		"commands": [
			{
				"command": "lsif.openDatabase",
				"title": "Open LSIF Database"
			}
		],
		"configuration": {
			"properties": {
				"lsif.trace.server": {
					"default": "off",
					"description": "Traces the communication between VS Code and the language server.",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"scope": "window",
					"type": "string"
				}
			},
			"title": "Index Format configuration",
			"type": "object"
		}
	},
	"activationEvents": [
		"onFileSystem:lsif",
		"onCommand:lsif.openDatabase"
	],
	"devDependencies": {
		"@types/node": "20.11.30",
		"typescript": "5.4.2",
		"typescript-esbuild": "latest"
	},
	"publishConfig": {
		"access": "public"
	},
	"enabledApiProposals": [
		"documentFiltersExclusive"
	]
}
